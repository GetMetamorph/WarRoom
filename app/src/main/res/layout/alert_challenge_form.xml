<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/challenge_alert_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/dialog_rounded_shape">

        <TextView
            android:id="@+id/form_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>


        <TextView
            android:id="@+id/username_label"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/challenge_form_edit"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/red_edit_ic"
                android:background="@drawable/challenge_form_edit">

                <ImageView
                    android:id="@+id/username_ic"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/user_ic"
                    android:padding="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/username_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:hint="@string/challenge_form_username_hint"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/date_label"
            android:layout_gravity="start"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/challenge_form_edit"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/red_edit_ic"
                android:background="@drawable/challenge_form_edit">

                <ImageView
                    android:id="@+id/date_ic"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/date_ic"
                    android:padding="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/date_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:inputType="date"
                android:hint="@string/challenge_form_date_hint"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"/>

        </LinearLayout>



        <TextView
            android:id="@+id/reason_label"
            android:layout_gravity="start"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/challenge_form_edit"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/red_edit_ic"
                android:background="@drawable/challenge_form_edit">

                <ImageView
                    android:id="@+id/reason_ic"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/question_ic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/reason_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/challenge_form_reason_hint"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/description_label"
            android:layout_gravity="start"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/challenge_form_edit"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/red_edit_ic"
                android:background="@drawable/challenge_form_edit">

                <ImageView
                    android:id="@+id/description_ic"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:padding="6dp"
                    android:src="@drawable/description_ic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/description_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/challenge_form_description_hint"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/valid_form_button"
            android:layout_gravity="center"
            android:text="Valider"
            android:backgroundTint="@color/black"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>