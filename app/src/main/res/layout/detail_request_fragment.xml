<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".activities.DetailRequestActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <TextView
        android:id="@+id/request_type"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:text="Demande acceptÃ© : Sportif"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="@color/white"
        app:fontFamily="@font/proximaniva"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_icon"/>

        <ImageView
            android:id="@+id/image_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher_war_room_foreground"
            app:layout_constraintTop_toTopOf="@id/request_type"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/request_type"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/little_square1"
        android:layout_width="50dp"
        android:layout_height="36dp"
        android:background="@drawable/little_square"
        android:layout_marginStart="20dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/user_name"
        app:layout_constraintTop_toTopOf="@+id/user_name"/>

    <TextView
        android:id="@+id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/request_type"
        app:layout_constraintBottom_toTopOf="@+id/date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:hint="Username"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textColor="#fff"
        android:background="@drawable/text_view_rounded_form"
        app:fontFamily="@font/proximaniva"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/little_square1"
        app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/little_square2"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:background="@drawable/little_square"
            android:layout_marginStart="20dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/date"
            app:layout_constraintTop_toTopOf="@+id/date"/>

    <TextView
        android:id="@+id/date"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintBottom_toTopOf="@+id/reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:hint="Date"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@drawable/text_view_rounded_form"
        app:fontFamily="@font/proximaniva"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/little_square2"
        app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/little_square3"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:background="@drawable/little_square"
            android:layout_marginStart="20dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/reason"
            app:layout_constraintTop_toTopOf="@+id/reason"/>

    <TextView
        android:id="@+id/reason"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintBottom_toTopOf="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:hint="Motif"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@drawable/text_view_rounded_form"
        app:fontFamily="@font/proximaniva"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/little_square3"
        app:layout_constraintRight_toRightOf="parent"/>


        <TextView
            android:id="@+id/little_square4"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:background="@drawable/little_square"
            android:layout_marginStart="20dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/description"
            app:layout_constraintTop_toTopOf="@+id/description"/>

        <TextView
        android:id="@+id/description"
        app:layout_constraintTop_toBottomOf="@+id/reason"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:hint="Description"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@drawable/text_view_rounded_form"
        app:fontFamily="@font/proximaniva"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/little_square4"
        app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
