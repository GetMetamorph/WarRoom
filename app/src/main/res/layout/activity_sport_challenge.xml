<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFC606"
    >


    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/sport_challenge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sport_challenge_title"
        android:textSize="30sp"
        android:textColor="#fff"
        app:fontFamily="@font/googlesansbold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/sport_challenge_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sport_challenge_desc"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="#fff"
        app:fontFamily="@font/googlesansbold"
        app:layout_constraintTop_toBottomOf="@+id/sport_challenge_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_marginTop="50dp"
        android:id="@+id/sport_challenge_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE : "
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:visibility="invisible"
        app:fontFamily="@font/googlesansbold"
        app:layout_constraintTop_toBottomOf="@+id/sport_challenge_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/player_sprite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:layout_marginTop="0dp"
        android:src="@drawable/flexupspritetransparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sport_challenge_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_button"
        android:text="Start"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
